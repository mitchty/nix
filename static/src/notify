#!/usr/bin/env sh
#-*-mode: Shell-script; coding: utf-8;-*-
# SPDX-License-Identifier: BlueOak-1.0.0
# Description: Dumb wrapper around osascript to make macos notifications easy to create.
_base=$(basename "$0")
_dir=$(cd -P -- "$(dirname -- "$(command -v -- "$0")")" && pwd -P || exit 126)
export _base _dir
set "${SETOPTS:--eu}"

msg=${1:-"no message"}; shift
title=

if [ $# -gt 0 ]; then
  title="with title \"$*\""
fi

osascript <<END
display notification "${msg}" ${title}
END
